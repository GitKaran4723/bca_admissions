<% let isKannada = (lang === 'kn'); %>
<!DOCTYPE html>
<html lang="<%= isKannada ? 'kn' : 'en' %>">
<head>
  <meta charset="UTF-8">
  <title><%= isKannada ? 'ವಿಸ್ತೃತ ನೋಟಿಫಿಕೇಶನ್' : 'Detailed Notification' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="max-w-4xl mx-auto p-6">
    
    <!-- Header -->
    <header class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-indigo-700">
        <%= isKannada ? 'ಬಿಎಸ್ಎಸಿ ಡಾಟಾ ಸೈನ್ಸ್ / ಮೆಷಿನ್ ಲರ್ನಿಂಗ್ / ಫುಲ್ ಸ್ಟ್ಯಾಕ್ ಡೆವಲಪ್ಮೆಂಟ್' : 'B.Sc. Data Science / Machine Learning / Full Stack Development' %>
      </h1>
      <a href="?lang=<%= isKannada ? 'en' : 'kn' %>" class="bg-indigo-100 text-indigo-700 px-4 py-2 rounded hover:bg-indigo-200 transition">
        <%= isKannada ? 'English' : 'ಕನ್ನಡ' %>
      </a>
    </header>

    <!-- Notification Content -->
    <section class="bg-white rounded-xl shadow p-6 space-y-4 text-sm sm:text-base">
      
      <div>
        <h2 class="font-semibold text-lg text-blue-700 mb-1"><%= isKannada ? 'ಕೋರ್ಸ್ ಪರಿಚಯ' : 'Programme Name' %></h2>
        <p>
          <%= isKannada
            ? 'ಈ ಕೋರ್ಸ್ ಮೆಷಿನ್ ಲರ್ನಿಂಗ್, ಡಾಟಾ ಸೈನ್ಸ್ ಮತ್ತು ಫುಲ್ ಸ್ಟ್ಯಾಕ್ ವೆಬ್ ಡೆವಲಪ್ಮೆಂಟ್ ನಂತಹ ಆಧುನಿಕ ತಂತ್ರಜ್ಞಾನಗಳಲ್ಲಿ ಪರಿಣತಿಯನ್ನು ನೀಡುತ್ತದೆ.'
            : 'B.C.A undergraduate programme each specialization such as Machine Learning, Data Science, and Full stack Development' %>
        </p>
      </div>

      <div>
        <h2 class="font-semibold text-lg text-blue-700 mb-1"><%= isKannada ? 'ಅರ್ಹತೆ' : 'Admission Eligibility Criterion' %></h2>
        <p>
          <%= isKannada
            ? 'ಪಿಯುಸಿ ಅಥವಾ ಸಮಾನ ಅರ್ಹತೆ ಹೊಂದಿರುವ ವಿದ್ಯಾರ್ಥಿಗಳು ಅರ್ಜಿ ಹಾಕಬಹುದು. ಸಾಮಾನ್ಯರಿಗೆ 50% ಮತ್ತು ಎಸ್‌ಸಿ/ಎಸ್‌ಟಿ/ಶ್ರೇಣಿ-1 ಅಭ್ಯರ್ಥಿಗಳಿಗೆ 45% ಅಂಕಗಳು ಅಗತ್ಯವಿದೆ.'
            : 'Candidated who have completed two year PUC or equivalent with Arts/ Science/ Commerce Subjects as optional and have secured at least 50% of marks in aggregate.' %>
        </p>
      </div>

      <div>
        <h2 class="font-semibold text-lg text-blue-700 mb-1"><%= isKannada ? 'ಅರ್ಜಿ ಸಲ್ಲಿಸುವ ವಿಧಾನ' : 'How to Apply' %></h2>
        <p>
          <%= isKannada
            ? 'ಅರ್ಜಿ ನಮೂನೆಯು ಎಂಸಿಎ ವಿಭಾಗ ಕಚೇರಿಯಿಂದ ಪಡೆದುಕೊಳ್ಳಬಹುದಾಗಿದೆ ಅಥವಾ ವೆಬ್‌ಸೈಟ್‌ನಿಂದ ಡೌನ್‌ಲೋಡ್ ಮಾಡಬಹುದು. ಅರ್ಜಿಯೊಂದಿಗೆ ಅಗತ್ಯ ಡಾಕ್ಯುಮೆಂಟ್‌ಗಳನ್ನು MCA ವಿಭಾಗ ಕಚೇರಿಗೆ ಸಲ್ಲಿಸಬೇಕು.'
            : 'Application forms can be collected from the MCA Department office or downloaded from the website. Submit the form with required documents to the department.' %>
        </p>
      </div>

      <div>
        <h2 class="font-semibold text-lg text-blue-700 mb-1"><%= isKannada ? 'ಅಂತಿಮ ದಿನಾಂಕ' : 'Last Date' %></h2>
        <p>
          <%= isKannada
            ? 'ಅರ್ಜಿ ಸಲ್ಲಿಸಲು ಕೊನೆಯ ದಿನಾಂಕ: 29 ಜೂನ್ 2024'
            : 'Last date to apply: 29th June 2024' %>
        </p>
      </div>

      <div>
        <h2 class="font-semibold text-lg text-blue-700 mb-1"><%= isKannada ? 'ಸಂಪರ್ಕ ಮಾಹಿತಿ' : 'Contact Information' %></h2>
        <p>
          <%= isKannada
            ? 'ಹೆಚ್ಚಿನ ಮಾಹಿತಿಗಾಗಿ ದಯವಿಟ್ಟು ಎಂಸಿಎ ವಿಭಾಗವನ್ನು ಸಂಪರ್ಕಿಸಿ: 080-22961453'
            : 'For more information, please contact MCA Department: 080-22961453' %>
        </p>
      </div>

    </section>

    <!-- Footer Buttons -->
    <div class="flex justify-center gap-4 mt-8">
      <a href="/?lang=<%= lang %>" class="bg-gray-200 hover:bg-gray-300 px-5 py-2 rounded text-sm">
        <%= isKannada ? 'ಮುಖಪುಟಕ್ಕೆ ಹಿಂತಿರುಗಿ' : 'Back to Home' %>
      </a>
 
    </div>

    <!-- Footer -->
    <footer class="text-center mt-10 text-xs text-gray-400">
      &copy; 2025 <%= isKannada ? 'ಬೆಂಗಳೂರು ವಿಶ್ವವಿದ್ಯಾಲಯ' : 'Bangalore University' %> | MCA Department
    </footer>

  </div>
</body>
</html>
